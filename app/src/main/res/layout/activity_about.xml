<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tasanah.kamusmikrotik.About">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="289dp"
        android:layout_height="237dp"
        android:layout_above="@id/txt_appname"
        android:layout_centerInParent="true"
        tools:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/txt_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/txt_version"
        android:layout_below="@+id/txt_appname"
        android:layout_above="@id/txt_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="v.2.0.0"/>

    <TextView
        android:id="@+id/txt_by"
        android:layout_above="@+id/txt_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Developed by"/>

    <TextView
        android:id="@+id/txt_developer"
        android:layout_above="@+id/adView_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:text="NA Developer"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/app_banner_about"/>

</RelativeLayout>
